<?xml version="1.0" encoding="utf-8"?>
<Window
 x:Class="SoccerLink.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:local="using:SoccerLink"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="d"
 Title="SoccerLink">

 <Window.SystemBackdrop>
 <MicaBackdrop />
 </Window.SystemBackdrop>

 <Grid Background="#2F4450">

 <Border
 Width="320"
 CornerRadius="16"
 Background="#98C9FF"
 HorizontalAlignment="Center"
 VerticalAlignment="Center"
 Padding="28">

 <StackPanel HorizontalAlignment="Stretch" Spacing="18">

 <TextBlock Text="Logowanie"
 FontSize="24"
 FontWeight="Bold"
 Foreground="#2A5670"
 HorizontalAlignment="Center"
 TextAlignment="Center"
 TextDecorations="Underline" />

 <StackPanel Spacing="6" HorizontalAlignment="Center">
 <TextBlock Text="Adres email"
 Foreground="#2A5670"
 FontWeight="Bold"
 FontSize="13" />

 <Grid Width="220" Height="44">
 <Border Background="#8A9AA6" CornerRadius="10" Margin="0,6,0,0" />
 <Border Background="#BFBFBF" CornerRadius="10">
 <TextBox x:Name="EmailTextBox"
 Background="Transparent"
 BorderThickness="0"
 Foreground="Black"
 Padding="12,8"
 PlaceholderText="email@przyklad.com"
 FontWeight="Bold" />
 </Border>
 </Grid>
 </StackPanel>

 <StackPanel Spacing="6" HorizontalAlignment="Center">
 <TextBlock Text="Hasło"
 Foreground="#2A5670"
 FontWeight="Bold"
 FontSize="13" />

 <Grid Width="220" Height="44">
 <Border Background="#8A9AA6" CornerRadius="10" Margin="0,6,0,0" />
 <Border Background="#BFBFBF" CornerRadius="10">
 <PasswordBox x:Name="PasswordBox"
 Background="Transparent"
 BorderThickness="0"
 Foreground="Black"
 Padding="12,8"
 FontWeight="Bold"
 PlaceholderText="Hasło" />
 </Border>
 </Grid>

 <TextBlock Text="Nie pamiętam hasła"
 Foreground="#2A5670"
 FontSize="12"
 HorizontalAlignment="Left"
 Margin="4,8,0,0" />
 </StackPanel>

 <StackPanel HorizontalAlignment="Center">
 <Grid Width="180" Height="44">
 <Border Background="#8A9AA6" CornerRadius="10" Margin="0,6,0,0" />
 <Border Background="#BFBFBF" CornerRadius="10">
 <Button x:Name="LoginButton"
 Background="Transparent"
 BorderThickness="0"
 HorizontalAlignment="Stretch"
 Click="LoginButton_Click">
 <TextBlock Text="Zaloguj się"
 Foreground="#2A5670"
 HorizontalAlignment="Center"
 VerticalAlignment="Center"
 FontWeight="Bold" />
 </Button>
 </Border>
 </Grid>
 </StackPanel>

 <StackPanel Spacing="6" HorizontalAlignment="Center" Margin="0,6,0,0">
 <TextBlock Text="Nie masz konta?"
 Foreground="#2A5670"
 FontSize="13"
 HorizontalAlignment="Center" />

 <Grid Width="160" Height="36">
 <Border Background="#8A9AA6" CornerRadius="8" Margin="0,6,0,0" />
 <Border Background="#BFBFBF" CornerRadius="8">
 <Button x:Name="RegisterButton"
 Background="Transparent"
 BorderThickness="0"
 HorizontalAlignment="Stretch">
 <TextBlock Text="Zarejestruj się"
 Foreground="#2A5670"
 HorizontalAlignment="Center"
 VerticalAlignment="Center"
 FontWeight="Bold" />
 </Button>
 </Border>
 </Grid>
 </StackPanel>

 </StackPanel>
 </Border>
 </Grid>
</Window>
