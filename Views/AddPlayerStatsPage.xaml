<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.AddPlayerStatsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SoccerLink.ViewModels"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="CounterButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="#4A5D69"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="CounterTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E6F6FF"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#86A9C8"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </Page.Resources>

    <Grid Background="#405861" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <Button Content="⟵ Anuluj" 
                    Command="{x:Bind ViewModel.CancelCommand}" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    Foreground="#CDE6F8" 
                    FontWeight="SemiBold"/>

            <TextBlock Text="Uzupełnij Statystyki Indywidualne" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#E6F6FF" 
                       Margin="0,5,0,0"/>

            <TextBlock x:Name="MatchTitleText" 
                       Text="Mecz: ---" 
                       Foreground="#FFD700" 
                       FontSize="14" 
                       Margin="0,2,0,0"/>

            <ToggleSwitch IsOn="{x:Bind ViewModel.GlobalCleanSheet, Mode=TwoWay}" 
                          OffContent="Czyste Konto (wszyscy): NIE" 
                          OnContent="Czyste Konto (wszyscy): TAK"
                          Foreground="#E6F6FF"
                          Margin="0,15,0,0"
                          HorizontalAlignment="Left"/>
        </StackPanel>

        <ListView x:Name="PlayersStatsList" 
                  Grid.Row="1" 
                  SelectionMode="None"
                  ItemsSource="{x:Bind ViewModel.PlayersList, Mode=OneWay}">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:PlayerStatsItemViewModel">
                    <Border Background="#32404A" Margin="0,6" Padding="12" CornerRadius="8" BorderBrush="#5A707A" BorderThickness="1">
                        <Grid RowSpacing="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <TextBlock Foreground="#E6F6FF" FontWeight="Bold" FontSize="18">
                                    <Run Text="{x:Bind Player.Imie}"/>
                                    <Run Text=" "/>
                                    <Run Text="{x:Bind Player.Nazwisko}"/>
                                </TextBlock>
                                <TextBlock Text="{x:Bind Player.Pozycja}" Foreground="#86A9C8" FontSize="12" FontStyle="Italic"/>
                            </StackPanel>

                            <Grid Grid.Row="1" ColumnSpacing="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Gole" Style="{StaticResource SectionHeaderStyle}" Foreground="#FFD700"/>
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Button Content="-" Command="{x:Bind DecGoalCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                        <TextBlock Text="{x:Bind Goals, Mode=OneWay}" Style="{StaticResource CounterTextStyle}" Foreground="#FFD700"/>
                                        <Button Content="+" Command="{x:Bind IncGoalCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Strzały" Style="{StaticResource SectionHeaderStyle}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Button Content="-" Command="{x:Bind DecShotCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                        <TextBlock Text="{x:Bind Shots, Mode=OneWay}" Style="{StaticResource CounterTextStyle}"/>
                                        <Button Content="+" Command="{x:Bind IncShotCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Celne" Style="{StaticResource SectionHeaderStyle}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Button Content="-" Command="{x:Bind DecShotOnCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                        <TextBlock Text="{x:Bind ShotsOnTarget, Mode=OneWay}" Style="{StaticResource CounterTextStyle}"/>
                                        <Button Content="+" Command="{x:Bind IncShotOnCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Niecelne" Style="{StaticResource SectionHeaderStyle}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Button Content="-" Command="{x:Bind DecShotOffCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                        <TextBlock Text="{x:Bind ShotsOffTarget, Mode=OneWay}" Style="{StaticResource CounterTextStyle}"/>
                                        <Button Content="+" Command="{x:Bind IncShotOffCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="2" ColumnSpacing="20" BorderBrush="#4A5D69" BorderThickness="0,1,0,0" Padding="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Celne Podania" Style="{StaticResource SectionHeaderStyle}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Button Content="-" Command="{x:Bind DecPassCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                        <TextBlock Text="{x:Bind Passes, Mode=OneWay}" Style="{StaticResource CounterTextStyle}"/>
                                        <Button Content="+" Command="{x:Bind IncPassCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Faule" Style="{StaticResource SectionHeaderStyle}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Button Content="-" Command="{x:Bind DecFoulCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                        <TextBlock Text="{x:Bind Fouls, Mode=OneWay}" Style="{StaticResource CounterTextStyle}"/>
                                        <Button Content="+" Command="{x:Bind IncFoulCommand}" Style="{StaticResource CounterButtonStyle}"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                    <TextBlock Text="Kartki (Żółta / Czerwona)" Style="{StaticResource SectionHeaderStyle}" HorizontalAlignment="Right"/>
                                    <StackPanel Orientation="Horizontal" Spacing="15" VerticalAlignment="Center" HorizontalAlignment="Right">

                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <Button Content="-" Command="{x:Bind DecYellowCommand}" Width="30" Height="30" Padding="0" Background="#D4AC0D" Foreground="Black" FontWeight="Bold" BorderThickness="0"/>
                                            <TextBlock Text="{x:Bind YellowCards, Mode=OneWay}" Foreground="White" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Width="15" TextAlignment="Center"/>
                                            <Button Content="+" Command="{x:Bind IncYellowCommand}" Width="30" Height="30" Padding="0" Background="#D4AC0D" Foreground="Black" FontWeight="Bold" BorderThickness="0"/>
                                        </StackPanel>

                                        <CheckBox IsChecked="{x:Bind HasRedCard, Mode=TwoWay}" 
                                                  Content="CZERWONA" 
                                                  Foreground="#E74C3C" 
                                                  FontWeight="Bold"
                                                  MinWidth="0"/>

                                        <CheckBox IsChecked="{x:Bind CleanSheet, Mode=TwoWay}" 
                                                  Content="CS"
                                                  ToolTipService.ToolTip="Czyste Konto"
                                                  Foreground="#86A9C8" 
                                                  MinWidth="0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="2" 
                Content="Zapisz Komplet Statystyk" 
                Command="{x:Bind ViewModel.SaveCommand}" 
                HorizontalAlignment="Center" 
                Background="#FFD700" 
                Foreground="#2F4450" 
                FontWeight="Bold" 
                FontSize="16" 
                CornerRadius="8" 
                Padding="40,12" 
                Margin="0,15,0,0"/>
    </Grid>
</Page>