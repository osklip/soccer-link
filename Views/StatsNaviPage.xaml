<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.StatsNaviPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackgroundBrush}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <Button Content="⟵ Powrót do menu" Click="BackButton_Click" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock Text="Centrum Statystyk" Style="{StaticResource HeaderTextStyle}" Margin="0,10,0,0"/>
            <TextBlock Text="Wybierz moduł, którym chcesz zarządzać" Style="{StaticResource SubHeaderTextStyle}"/>
        </StackPanel>

        <GridView Grid.Row="1">
            <Button Click="AddStatsButton_Click" Style="{StaticResource MenuCardButtonStyle}" Width="220" Height="160" Margin="0,0,20,20">
                <Grid Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <FontIcon Glyph="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Dodaj Statystyki" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Wprowadź dane pomeczowe" FontSize="10" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Button>

            <Button Click="ViewTeamStatsButton_Click" Style="{StaticResource MenuCardButtonStyle}" Width="220" Height="160" Margin="0,0,20,20">
                <Grid Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <FontIcon Glyph="&#xE9D2;" FontFamily="Segoe MDL2 Assets" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Statystyki Drużyny" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Analiza całego zespołu" FontSize="10" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Button>

            <Button Click="ViewPlayerStatsButton_Click" Style="{StaticResource MenuCardButtonStyle}" Width="220" Height="160" Margin="0,0,20,20">
                <Grid Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <FontIcon Glyph="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Statystyki Zawodników" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Rankingi indywidualne" FontSize="10" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Button>
        </GridView>
    </Grid>
</Page>