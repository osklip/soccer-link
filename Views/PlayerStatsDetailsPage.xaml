<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.PlayerStatsDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SoccerLink.ViewModels"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Button" x:Key="StatCardStyle">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style TargetType="Border" x:Key="CardLabelBorderStyle">
            <Setter Property="Background" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="10,5,10,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="CardLabelTextStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="CardValueTextStyle">
            <Setter Property="Foreground" Value="{StaticResource TextAccentBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource AppBackgroundBrush}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Click="BackButton_Click" Style="{StaticResource BackButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="⟵" FontSize="20"/>
                    <TextBlock Text="Powrót" FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock Text="{x:Bind ViewModel.PlayerName, Mode=OneWay}" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center"/>
                <TextBlock Text="{x:Bind ViewModel.Position, Mode=OneWay}" Style="{StaticResource SubHeaderTextStyle}" HorizontalAlignment="Center"/>
            </StackPanel>

            <Border Grid.Column="2" Background="{StaticResource CardBorderBrush}" CornerRadius="6" Padding="12,6" VerticalAlignment="Center">
                <TextBlock x:Name="DateTextBlock" Text="--:--" Foreground="White" FontWeight="SemiBold"/>
            </Border>
        </Grid>

        <Grid Grid.Row="1" ColumnSpacing="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource StatCardStyle}" Grid.Row="0" Grid.Column="0">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Gole" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.Goals, Mode=OneWay}" Style="{StaticResource CardValueTextStyle}" Margin="0,30,0,0"/>
                </Grid>
            </Button>

            <Button Style="{StaticResource StatCardStyle}" Grid.Row="0" Grid.Column="1">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Strzały (Ogółem)" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.Shots, Mode=OneWay}" Style="{StaticResource CardValueTextStyle}" Margin="0,30,0,0"/>
                </Grid>
            </Button>

            <Button Style="{StaticResource StatCardStyle}" Grid.Row="0" Grid.Column="2">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Strzały Celne" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.ShotsOn, Mode=OneWay}" Style="{StaticResource CardValueTextStyle}" Margin="0,30,0,0"/>
                </Grid>
            </Button>

            <Button Style="{StaticResource StatCardStyle}" Grid.Row="0" Grid.Column="3">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Strzały Niecelne" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.ShotsOff, Mode=OneWay}" Style="{StaticResource CardValueTextStyle}" Margin="0,30,0,0"/>
                </Grid>
            </Button>

            <Button Style="{StaticResource StatCardStyle}" Grid.Row="1" Grid.Column="0">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Podania Celne" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.Passes, Mode=OneWay}" Style="{StaticResource CardValueTextStyle}" Margin="0,30,0,0"/>
                </Grid>
            </Button>

            <Button Style="{StaticResource StatCardStyle}" Grid.Row="1" Grid.Column="1">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Czyste Konta" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.CleanSheets, Mode=OneWay}" Style="{StaticResource CardValueTextStyle}" Margin="0,30,0,0"/>
                </Grid>
            </Button>

            <Button Style="{StaticResource StatCardStyle}" Grid.Row="1" Grid.Column="2">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Faule" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.Fouls, Mode=OneWay}" Style="{StaticResource CardValueTextStyle}" Margin="0,30,0,0"/>
                </Grid>
            </Button>

            <Button Style="{StaticResource StatCardStyle}" Grid.Row="1" Grid.Column="3">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Kartki (Żółte / Czerwone)" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.Cards, Mode=OneWay}" Style="{StaticResource CardValueTextStyle}" FontSize="32" Margin="0,30,0,0"/>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</Page>