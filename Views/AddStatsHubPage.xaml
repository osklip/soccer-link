<Page
    x:Class="SoccerLink.Views.AddStatsHubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#405861" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <Button Content="⟵ Zmień mecz" Click="BackButton_Click" Background="Transparent" BorderThickness="0" Foreground="#CDE6F8" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="Uzupełnij statystyki" FontSize="24" FontWeight="Bold" Foreground="#E6F6FF" Margin="0,10,0,0"/>
            <TextBlock x:Name="MatchInfoTextBlock" Text="Mecz: ---" FontSize="16" Foreground="#FFD700" FontWeight="SemiBold"/>
        </StackPanel>

        <Grid Grid.Row="1" ColumnSpacing="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="TeamStatsButton" Click="TeamStatsButton_Click" 
                    Height="200" HorizontalAlignment="Stretch" Background="#32404A" CornerRadius="12" BorderBrush="#9ECBFF" BorderThickness="2">
                <StackPanel Spacing="15">
                    <FontIcon Glyph="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="60" Foreground="#E6F6FF"/>
                    <TextBlock Text="Statystyki Drużynowe" Foreground="White" FontWeight="Bold" FontSize="18" TextAlignment="Center" TextWrapping="Wrap"/>
                    <TextBlock Text="(Gole, posiadanie, strzały)" Foreground="#CDE6F8" FontSize="12" TextAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="1" x:Name="PlayerStatsButton" Click="PlayerStatsButton_Click"
                    Height="200" HorizontalAlignment="Stretch" Background="#32404A" CornerRadius="12" BorderBrush="#9ECBFF" BorderThickness="2">
                <StackPanel Spacing="15">
                    <FontIcon Glyph="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="60" Foreground="#E6F6FF"/>
                    <TextBlock Text="Statystyki Zawodników" Foreground="White" FontWeight="Bold" FontSize="18" TextAlignment="Center" TextWrapping="Wrap"/>
                    <TextBlock Text="(Gole, kartki, podania dla każdego gracza)" Foreground="#CDE6F8" FontSize="12" TextAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>