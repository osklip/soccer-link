<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.AddStatsHubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackgroundBrush}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <Button Content="⟵ Zmień mecz" Click="BackButton_Click" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock Text="Uzupełnij statystyki" Style="{StaticResource HeaderTextStyle}" Margin="0,10,0,0"/>
            <TextBlock x:Name="MatchInfoTextBlock" Text="Mecz: ---" Foreground="{StaticResource TextAccentBrush}" FontWeight="SemiBold" FontSize="16"/>
        </StackPanel>

        <Grid Grid.Row="1" ColumnSpacing="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="TeamStatsButton" Click="TeamStatsButton_Click" 
                    Height="200" HorizontalAlignment="Stretch" 
                    Style="{StaticResource MenuCardButtonStyle}">
                <StackPanel Spacing="15">
                    <FontIcon Glyph="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="60" Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock Text="Statystyki Drużynowe" FontWeight="Bold" FontSize="18" TextAlignment="Center" TextWrapping="Wrap"/>
                    <TextBlock Text="(Gole, posiadanie, strzały)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" TextAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="1" x:Name="PlayerStatsButton" Click="PlayerStatsButton_Click"
                    Height="200" HorizontalAlignment="Stretch" 
                    Style="{StaticResource MenuCardButtonStyle}">
                <StackPanel Spacing="15">
                    <FontIcon Glyph="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="60" Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock Text="Statystyki Zawodników" FontWeight="Bold" FontSize="18" TextAlignment="Center" TextWrapping="Wrap"/>
                    <TextBlock Text="(Gole, kartki, podania dla każdego gracza)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" TextAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>