<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.EditEventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SoccerLink.Models"
    mc:Ignorable="d">

    <Grid Background="#405861">
        <Border
            Width="600"
            CornerRadius="16"
            Background="#98C9FF"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Padding="24">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16">

                    <TextBlock Text="Edycja Wydarzenia" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#2A5670" 
                               HorizontalAlignment="Center"/>

                    <TextBlock x:Name="EventInfoTextBlock" 
                               HorizontalAlignment="Center"
                               FontSize="16"
                               Foreground="#2A5670"/>

                    <StackPanel Spacing="10">
                        <TextBlock Text="Typ Wydarzenia (nieedytowalny)" Foreground="#2A5670" FontWeight="Bold"/>
                        <TextBox x:Name="EventTypeTextBox" IsReadOnly="True" Background="#BFBFBF" CornerRadius="8" Padding="10,6" Opacity="0.8"/>
                    </StackPanel>

                    <StackPanel Spacing="10">
                        <TextBlock x:Name="TitleLabel" Text="Nazwa/Przeciwnik/Typ" Foreground="#2A5670" FontWeight="Bold"/>
                        <TextBox x:Name="TitleTextBox" PlaceholderText="Wpisz tytuł/nazwę/przeciwnika" Background="#BFBFBF" CornerRadius="8" Padding="10,6" />

                        <TextBlock Text="Data" Foreground="#2A5670" FontWeight="Bold"/>
                        <CalendarDatePicker x:Name="DateDatePicker" PlaceholderText="Wybierz datę" Background="#BFBFBF" CornerRadius="8" />

                        <TextBlock Text="Miejsce" Foreground="#2A5670" FontWeight="Bold"/>
                        <TextBox x:Name="MiejsceTextBox" PlaceholderText="Miejsce wydarzenia" Background="#BFBFBF" CornerRadius="8" Padding="10,6" />
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Godzina rozpoczęcia" Foreground="#2A5670" FontWeight="Bold"/>
                            <TextBox x:Name="TimeStartTextBox" PlaceholderText="HH:MM (np. 18:30)" Background="#BFBFBF" CornerRadius="8" Padding="10,6" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Spacing="4" x:Name="TimeEndPanel">
                            <TextBlock Text="Godzina zakończenia (opcjonalnie)" Foreground="#2A5670" FontWeight="Bold"/>
                            <TextBox x:Name="TimeEndTextBox" PlaceholderText="HH:MM" Background="#BFBFBF" CornerRadius="8" Padding="10,6" />
                        </StackPanel>
                    </Grid>

                    <StackPanel x:Name="OpisPanel" Spacing="10" Visibility="Collapsed">
                        <TextBlock Text="Opis" Foreground="#2A5670" FontWeight="Bold"/>
                        <TextBox x:Name="OpisTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Background="#BFBFBF" CornerRadius="8" Padding="10,6" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,10,0,0">
                        <Button Content="Anuluj" 
                                Click="CancelButton_Click" 
                                Background="#BFBFBF" 
                                Foreground="#2A5670" 
                                FontWeight="Bold"
                                Width="120" 
                                CornerRadius="8" />

                        <Button x:Name="SaveButton"
                                Content="Zapisz zmiany" 
                                Click="SaveButton_Click" 
                                Background="#2A5670" 
                                Foreground="#E6F6FF" 
                                FontWeight="Bold"
                                Width="150" 
                                CornerRadius="8" />
                    </StackPanel>

                    <TextBlock x:Name="StatusTextBlock" 
                               Foreground="Red" 
                               HorizontalAlignment="Center" 
                               Margin="0,8,0,0"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>