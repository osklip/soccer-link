<Page
    x:Class="SoccerLink.Views.ConfirmDeleteEventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#405861" Padding="24">
        <Border Width="400" Background="#32404A" CornerRadius="10" BorderBrush="#C0392B" BorderThickness="3" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Spacing="15">
                <TextBlock Text="Potwierdź usunięcie" FontSize="20" Foreground="#CDE6F8" FontWeight="Bold"/>

                <TextBlock Text="{x:Bind ViewModel.ConfirmationText, Mode=OneWay}" 
                           Foreground="White" TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
                    <Button Content="Anuluj" 
                            Command="{x:Bind ViewModel.CancelCommand}" 
                            Background="#9ECBFF" Foreground="#2F4450" CornerRadius="4"/>

                    <Button Content="Usuń trwale" 
                            Command="{x:Bind ViewModel.DeleteCommand}" 
                            Background="#C0392B" Foreground="White" CornerRadius="4"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>