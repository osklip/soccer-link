<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.NewMessagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SoccerLink.Models"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackgroundBrush}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="12" Margin="0,0,0,20">
            <Button x:Name="BackButton" Content="⟵ Powrót" Click="BackButton_Click" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock Text="Utwórz nową wiadomość" Style="{StaticResource HeaderTextStyle}"/>
        </StackPanel>

        <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="10" BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1" Padding="25">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="18">

                    <TextBlock Text="Wybór adresatów (Zawodnicy)" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" FontSize="16"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button x:Name="SendAllButton" Grid.Row="0" Content="ZAZNACZ WSZYSTKICH" Click="SendAllButton_Click"
                                HorizontalAlignment="Stretch" Background="{StaticResource TextMutedBrush}" Foreground="Black" FontWeight="Bold" CornerRadius="6" Margin="0,0,0,10"/>

                        <ListView x:Name="RecipientListView" Grid.Row="1" SelectionMode="Multiple"
                                  Background="#2F4450" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource CardBorderBrush}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:Zawodnik">
                                    <TextBlock Text="{x:Bind Nazwisko}" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold" Padding="10"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock x:Name="SelectedRecipientsTextBlock" Grid.Row="2" Text="Wybrani: 0 zawodników" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,0"/>
                    </Grid>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Temat" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                        <TextBox x:Name="SubjectTextBox" PlaceholderText="Wpisz temat..."/>
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Treść" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                        <TextBox x:Name="BodyTextBox" Height="150" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                    </StackPanel>

                    <Button x:Name="SendButton" Content="Wyślij wiadomość" Click="SendButton_Click"
                            HorizontalAlignment="Center" Background="{StaticResource TextAccentBrush}" Foreground="Black" FontWeight="Bold" 
                            CornerRadius="8" Padding="30,10" Margin="0,10,0,0"/>

                    <TextBlock x:Name="StatusTextBlock" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,8,0,0"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>