<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.MessagesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoccerLink.Views"
    xmlns:models="using:SoccerLink.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#2F4450">
        <Grid.ColumnDefinitions>
            <!-- panel z listą -->
            <ColumnDefinition Width="260" />
            <!-- podgląd -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- LEWY PANEL – lista + pasek nad nią -->
        <Border Grid.Column="0"
                Margin="16"
                CornerRadius="20"
                Background="#86A9C8">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- wiersz: przycisk wstecz -->
                    <RowDefinition Height="Auto" />
                    <!-- wiersz: filtr odebrane / wysłane -->
                    <RowDefinition Height="Auto" />
                    <!-- wiersz: lista wiadomości -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- PRZYCISK POWROTU -->
                <Button Grid.Row="0"
                        x:Name="BackButton"
                        Content="⟵ Powrót"
                        HorizontalAlignment="Left"
                        Margin="8,8,8,4"
                        Padding="8,4"
                        Background="#2F4450"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BackButton_Click" />

                <!-- FILTR ODEBRANE / WYSŁANE -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Margin="8,0,8,4"
                            VerticalAlignment="Center"
                            Spacing="8">
                    <TextBlock Text="Pokaż:"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0" />
                    <ComboBox x:Name="MessagesFilterComboBox"
                              Width="140"
                              SelectionChanged="MessagesFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="Odebrane" Tag="received" IsSelected="True" />
                        <ComboBoxItem Content="Wysłane" Tag="sent" />
                    </ComboBox>
                </StackPanel>

                <!-- LISTA WIADOMOŚCI -->
                <ListView Grid.Row="2"
                          x:Name="MessagesList"
                          SelectionMode="Single"
                          SelectionChanged="MessagesList_SelectionChanged"
                          Background="#2F4450"
                          BorderThickness="0"
                          Margin="4,4,4,8">
                    <ListView.ItemTemplate>
                        <!-- dopasowane do modelu Wiadomosc -->
                        <DataTemplate x:DataType="models:Wiadomosc">
                            <StackPanel Padding="8,4">
                                <!-- Temat wiadomości -->
                                <TextBlock Text="{x:Bind Temat}"
                                           FontWeight="SemiBold" />
                                <!-- np. typ lub nazwa nadawcy -->
                                <TextBlock Text="{x:Bind NadawcaNazwa}"
                                           FontSize="12"
                                           Opacity="0.7" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <!-- PRAWY PANEL – szczegóły wiadomości -->
        <Border Grid.Column="1"
                Margin="16"
                CornerRadius="20"
                Background="#86A9C8">
            <StackPanel Padding="16" Spacing="8">

                <!-- Do: ... -->
                <TextBlock x:Name="ToTextBlock"
                           FontWeight="Bold" />

                <!-- Od: ... -->
                <TextBlock x:Name="FromTextBlock"
                           FontWeight="Bold"
                           Margin="0,0,0,8" />

                <!-- Temat: ... -->
                <TextBlock x:Name="SubjectTextBlock"
                           FontWeight="Bold"
                           Margin="0,0,0,8" />

                <!-- Treść wiadomości -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Margin="0,8,0,0">
                    <TextBlock x:Name="BodyTextBlock"
                               TextWrapping="Wrap" />
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>

</Page>
