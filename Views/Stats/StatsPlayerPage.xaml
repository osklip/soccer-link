<Page
    x:Class="SoccerLink.Views.StatsPlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SoccerLink.Models"
    mc:Ignorable="d">

    <Grid Background="#405861" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Button Command="{x:Bind ViewModel.NavigateBackCommand}" Background="Transparent" BorderThickness="0" Padding="0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="⟵" FontSize="20" Foreground="#CDE6F8" FontWeight="SemiBold"/>
                        <TextBlock Text="Powrót" FontSize="18" Foreground="#CDE6F8" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                <Button Command="{x:Bind ViewModel.NavigateHomeCommand}" Background="Transparent" BorderThickness="0" Padding="4">
                    <FontIcon Glyph="&#xE80F;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="#CDE6F8"/>
                </Button>
            </StackPanel>

            <TextBlock Text="Wybierz Zawodnika" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#E6F6FF" 
                       HorizontalAlignment="Center"/>
        </Grid>

        <Border Grid.Row="1" 
                Background="#32404A" 
                BorderBrush="#6FA2C6" 
                BorderThickness="3" 
                CornerRadius="20"
                Padding="20">

            <ListView x:Name="PlayersListView" 
                      ItemsSource="{x:Bind ViewModel.Players, Mode=OneWay}"
                      SelectionMode="Single"
                      SelectionChanged="PlayersListView_SelectionChanged"
                      Background="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Zawodnik">
                        <Grid Padding="12" Margin="0,4,0,4" Background="#2F4450" CornerRadius="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <FontIcon Glyph="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="#CDE6F8" Margin="0,0,16,0"/>

                            <TextBlock Grid.Column="1" Foreground="#E6F6FF" FontSize="18" FontWeight="Bold" VerticalAlignment="Center">
                                <Run Text="{x:Bind Imie}"/>
                                <Run Text=" "/>
                                <Run Text="{x:Bind Nazwisko}"/>
                            </TextBlock>

                            <TextBlock Grid.Column="2" Text="{x:Bind Pozycja}" Foreground="#86A9C8" FontStyle="Italic" VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Page>