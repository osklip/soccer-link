<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.StatsTeamPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SoccerLink.ViewModels"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Button" x:Key="StatCardStyle">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="#32404A"/>
            <Setter Property="BorderBrush" Value="#6FA2C6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style TargetType="Border" x:Key="CardLabelBorderStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="10,5,10,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="CardLabelTextStyle">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="CardValueTextStyle">
            <Setter Property="Foreground" Value="#E6F6FF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid Background="#405861" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                <Button x:Name="BackButton" 
                        Click="BackButton_Click" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Padding="0"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="⟵" FontSize="20" Foreground="#CDE6F8" FontWeight="SemiBold"/>
                        <TextBlock Text="Powrót" FontSize="18" Foreground="#CDE6F8" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button x:Name="HomeButton"
                        Click="HomeButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="4"
                        VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE80F;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="#CDE6F8"/>
                </Button>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                <TextBlock Text="Statystyki Drużynowe" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#E6F6FF" 
                           HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                    <ComboBox ItemsSource="{x:Bind ViewModel.Months}"
                              SelectedIndex="{x:Bind ViewModel.SelectedMonthIndex, Mode=TwoWay}"
                              Width="130"
                              PlaceholderText="Miesiąc"
                              Background="#32404A" Foreground="White" CornerRadius="6" BorderThickness="0"/>

                    <ComboBox ItemsSource="{x:Bind ViewModel.Years}"
                              SelectedIndex="{x:Bind ViewModel.SelectedYearIndex, Mode=TwoWay}"
                              Width="110"
                              PlaceholderText="Rok"
                              Background="#32404A" Foreground="White" CornerRadius="6" BorderThickness="0"/>
                </StackPanel>

                <TextBlock Text="Średnie wartości (Wybrany okres)" 
                           Foreground="#86A9C8" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <Border Background="#5A707A" CornerRadius="6" Padding="12,6">
                    <TextBlock x:Name="DateTextBlock" 
                               Text="--.--.---- --:--" 
                               Foreground="Black" 
                               FontWeight="SemiBold" 
                               FontSize="14"/>
                </Border>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" ColumnSpacing="20" RowSpacing="20" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Bramek na mecz" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.AvgGoals, Mode=OneWay}" 
                               Style="{StaticResource CardValueTextStyle}" Margin="0,55,0,0"/>
                </Grid>
            </Button>

            <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Strzały na mecz" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.AvgShots, Mode=OneWay}" 
                               Style="{StaticResource CardValueTextStyle}" Margin="0,55,0,0"/>
                </Grid>
            </Button>

            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Strzały celne" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.AvgShotsOn, Mode=OneWay}" 
                               Style="{StaticResource CardValueTextStyle}" Margin="0,55,0,0"/>
                </Grid>
            </Button>

            <Button Grid.Row="0" Grid.Column="3" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Strzały niecelne" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.AvgShotsOff, Mode=OneWay}" 
                               Style="{StaticResource CardValueTextStyle}" Margin="0,55,0,0"/>
                </Grid>
            </Button>

            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Posiadanie piłki" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.AvgPossession, Mode=OneWay}" 
                               Style="{StaticResource CardValueTextStyle}" Margin="0,55,0,0"/>
                </Grid>
            </Button>

            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Rożne na mecz" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.AvgCorners, Mode=OneWay}" 
                               Style="{StaticResource CardValueTextStyle}" Margin="0,55,0,0"/>
                </Grid>
            </Button>

            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Czyste konta" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.TotalCleanSheets, Mode=OneWay}" 
                               Style="{StaticResource CardValueTextStyle}" Margin="0,55,0,0"/>
                </Grid>
            </Button>

            <Button Grid.Row="1" Grid.Column="3" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Border Style="{StaticResource CardLabelBorderStyle}">
                        <TextBlock Text="Faule na mecz" Style="{StaticResource CardLabelTextStyle}"/>
                    </Border>
                    <TextBlock Text="{x:Bind ViewModel.AvgFouls, Mode=OneWay}" 
                               Style="{StaticResource CardValueTextStyle}" Margin="0,55,0,0"/>
                </Grid>
            </Button>

        </Grid>
    </Grid>
</Page>