<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.TeamManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoccerLink.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#405861" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- pasek z powrotem -->
            <RowDefinition Height="*" />
            <!-- główna zawartość -->
        </Grid.RowDefinitions>

        <!-- GÓRNY PASEK: przycisk powrotu -->
        <Button x:Name="BackButton"
            Grid.Row="0"
            Content="⟵"
            Click="BackButton_Click"
            Width="40"
            Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            FontSize="24"
            Foreground="Black" />

        <!-- GŁÓWNA ZAWARTOŚĆ – dwie wyspy -->
        <Grid Grid.Row="1"
          VerticalAlignment="Center"
          HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="60"/>
                <!-- odstęp między wyspami -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- WYSPA 1: Manage Players -->
            <Border Grid.Column="0"
                Width="400"
                Height="300"
                Background="#32404A"
                CornerRadius="10"
                BorderBrush="#9ECBFF"
                BorderThickness="3">
                <Button x:Name="ManagePlayersButton"
                    Background="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="ManagePlayersButton_Click">
                    <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="24">
                        <TextBlock Text="Kadra"
                               Foreground="#CDE6F8"
                               FontWeight="Bold"
                               FontSize="20"
                               TextAlignment="Center"/>
                        <Image Source="C:\Users\lipsk\source\repos\SoccerLink\Assets\players_icon.png" Width="150" Height="150" />
                    </StackPanel>
                </Button>
            </Border>

            <!-- WYSPA 2: Manage Squad -->
            <Border Grid.Column="2"
                Width="400"
                Height="300"
                Background="#32404A"
                CornerRadius="10"
                BorderBrush="#9ECBFF"
                BorderThickness="3">
                <Button x:Name="ManageSquadButton"
                    Background="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="ManageSquadButton_Click">
                    <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="24">
                        <TextBlock Text="Skład"
                               Foreground="#CDE6F8"
                               FontWeight="Bold"
                               FontSize="20"
                               TextAlignment="Center"/>
                        <Image Source="C:\Users\lipsk\source\repos\SoccerLink\Assets\squad_icon.png" Width="150" Height="150" />
                    </StackPanel>
                </Button>
            </Border>
        </Grid>
    </Grid>
</Page>
