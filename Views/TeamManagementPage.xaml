<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.TeamManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoccerLink.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#405861" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button x:Name="BackButton"
            Grid.Row="0"
            Content="⟵ Powrót"
            Click="BackButton_Click"
            HorizontalAlignment="Left"
            Background="Transparent"
            BorderThickness="0"
            FontSize="18"
            Foreground="#CDE6F8"
            FontWeight="SemiBold"
            Margin="0,0,0,12" />

        <Grid Grid.Row="1"
          VerticalAlignment="Center"
          HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                Width="400"
                Height="300"
                Background="#32404A"
                CornerRadius="10"
                BorderBrush="#9ECBFF"
                BorderThickness="3">
                <Button x:Name="ManagePlayersButton"
                    Background="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="ManagePlayersButton_Click">
                    <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="24">
                        <TextBlock Text="Kadra"
                               Foreground="#CDE6F8"
                               FontWeight="Bold"
                               FontSize="20"
                               TextAlignment="Center"/>
                        <Image Source="/Assets/players_icon.png" Width="150" 
                               Height="150" />
                    </StackPanel>
                </Button>
            </Border>

            <Border Grid.Column="2"
                Width="400"
                Height="300"
                Background="#32404A"
                CornerRadius="10"
                BorderBrush="#9ECBFF"
                BorderThickness="3">
                <Button x:Name="ManageSquadButton"
                    Background="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="ManageSquadButton_Click">
                    <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="24">
                        <TextBlock Text="Skład"
                               Foreground="#CDE6F8"
                               FontWeight="Bold"
                               FontSize="20"
                               TextAlignment="Center"/>
                        <Image Source="/Assets/squad_icon.png" Width="150" Height="150" />
                    </StackPanel>
                </Button>
            </Border>
        </Grid>
    </Grid>
</Page>