<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.TeamManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SoccerLink.Models"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackgroundBrush}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <Button Content="⟵ Powrót" Click="BackButton_Click" Style="{StaticResource BackButtonStyle}"/>
                <TextBlock Text="Zarządzanie Kadrą" Style="{StaticResource HeaderTextStyle}" Margin="0,5,0,0"/>
            </StackPanel>

            <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="ImieInput" PlaceholderText="Imię" />
                    <TextBox x:Name="NazwiskoInput" Grid.Column="1" PlaceholderText="Nazwisko" />
                    <ComboBox x:Name="PozycjaInput" Grid.Column="2" HorizontalAlignment="Stretch" PlaceholderText="Pozycja">
                        <x:String>Bramkarz</x:String>
                        <x:String>Obrońca</x:String>
                        <x:String>Pomocnik</x:String>
                        <x:String>Napastnik</x:String>
                    </ComboBox>

                    <Button x:Name="AddPlayerButton" Grid.Column="3" Click="AddPlayerButton_Click" Background="{StaticResource TextAccentBrush}" Foreground="Black" FontWeight="Bold">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <SymbolIcon Symbol="Add"/>
                            <TextBlock Text="Dodaj"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <ListView x:Name="PlayersListView" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Zawodnik">
                    <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="6" Margin="0,4" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <FontIcon Glyph="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,15,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" FontSize="16">
                                    <Run Text="{x:Bind Imie}"/> <Run Text="{x:Bind Nazwisko}"/>
                                </TextBlock>
                                <TextBlock Text="{x:Bind Pozycja}" FontSize="12" Foreground="{StaticResource TextMutedBrush}" FontStyle="Italic"/>
                            </StackPanel>

                            <Button Grid.Column="2" Click="DeletePlayerButton_Click" Background="Transparent" BorderThickness="0">
                                <FontIcon Glyph="&#xE74D;" FontFamily="Segoe MDL2 Assets" Foreground="#E74C3C"/>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>