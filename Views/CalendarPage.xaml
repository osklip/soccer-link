<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.CalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SoccerLink.Models"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackgroundBrush}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Button Content="⟵ Powrót" Click="BackButton_Click" Style="{StaticResource BackButtonStyle}"/>
                <TextBlock Text="Kalendarz Wydarzeń" Style="{StaticResource HeaderTextStyle}" Margin="0,5,0,0"/>
            </StackPanel>

            <Button Grid.Column="2" Click="AddEventButton_Click" Background="{StaticResource TextAccentBrush}" Foreground="Black" CornerRadius="20" Padding="15,8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Add"/>
                    <TextBlock Text="Dodaj wydarzenie" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </Grid>

        <ListView x:Name="EventsListView" Grid.Row="1" SelectionMode="Single" 
                  ItemsSource="{x:Bind ViewModel.EventsToShow, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:UpcomingEvent">
                    <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Margin="0,6" Padding="15" BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#4A5D69" CornerRadius="6" Padding="10" Width="60" Height="60" VerticalAlignment="Center" Margin="0,0,15,0">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind DateTimeStart.Day}" Foreground="{StaticResource TextAccentBrush}" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{x:Bind DateTimeStart.Month}" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind EventType}" FontSize="12" Foreground="{StaticResource TextMutedBrush}" CharacterSpacing="50"/>

                                <TextBlock Text="{x:Bind Title}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>

                                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,0">
                                    <TextBlock Text="{x:Bind DisplayTimeRange}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text="|" Foreground="{StaticResource CardBorderBrush}"/>
                                    <TextBlock Text="{x:Bind Location}" Foreground="{StaticResource TextSecondaryBrush}" FontStyle="Italic"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5">
                                <Button Click="EditEventButton_Click" Tag="{x:Bind Id}" Background="Transparent" ToolTipService.ToolTip="Edytuj">
                                    <FontIcon Glyph="&#xE70F;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Button>
                                <Button Click="DeleteEventButton_Click" Tag="{x:Bind Id}" Background="Transparent" ToolTipService.ToolTip="Usuń">
                                    <FontIcon Glyph="&#xE74D;" FontFamily="Segoe MDL2 Assets" Foreground="#E74C3C"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock x:Name="EmptyStateText" Grid.Row="1" 
                   Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                   Visibility="{x:Bind ViewModel.IsStatusVisible, Mode=OneWay, Converter={StaticResource BoolToVis}}"
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Foreground="{StaticResource TextMutedBrush}"/>
    </Grid>
</Page>