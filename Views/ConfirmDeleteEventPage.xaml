<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.ConfirmDeleteEventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackgroundBrush}" Padding="24">
        <Border Width="400" Background="{StaticResource CardBackgroundBrush}" CornerRadius="10" BorderBrush="#C0392B" BorderThickness="2" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Spacing="15">
                <TextBlock Text="Potwierdź usunięcie" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Bold"/>

                <TextBlock x:Name="ConfirmationTextBlock" Text="Czy na pewno chcesz usunąć to wydarzenie?" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
                    <Button Content="Anuluj" Click="CancelButton_Click" Background="{StaticResource TextMutedBrush}" Foreground="Black" CornerRadius="4"/>
                    <Button Content="Usuń trwale" Click="DeleteButton_Click" Background="#C0392B" Foreground="White" CornerRadius="4" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>