<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoccerLink.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#405861" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.0*" />
            <ColumnDefinition Width="1.4*" />
            <ColumnDefinition Width="1.0*" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="HeaderText" Grid.Row="0" Grid.ColumnSpan="3" Foreground="#E6F6FF" FontWeight="Bold" FontSize="20" Margin="8,6" HorizontalAlignment="Left" />

        <Border Grid.Row="1" Grid.Column="0" Margin="8" Background="#32404A" CornerRadius="10" BorderBrush="#9ECBFF" BorderThickness="3">
            <Button x:Name="MessageButton" Click="MessageButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel Margin="12" VerticalAlignment="Top" Spacing="6">
                    <TextBlock Text="Wiadomości" Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                    <Image Source="C:\Users\lipsk\source\repos\SoccerLink\Assets\messages_icon.png" Width="96" Height="96" />
                </StackPanel>
            </Button>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Margin="8" Background="#32404A" CornerRadius="10" BorderBrush="#9ECBFF" BorderThickness="3">
            <Button x:Name="CalendarButton" Click="CalendarButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                    <TextBlock Text="Kalendarz" Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                    <Image Source="C:\Users\lipsk\source\repos\SoccerLink\Assets\calendar_icon.png" Width="96" Height="96" />
                </StackPanel>
            </Button>
        </Border>

        <Border Grid.Row="1" Grid.Column="2" Margin="8" Background="#32404A" CornerRadius="10" BorderBrush="#9ECBFF" BorderThickness="3">
            <Button x:Name="StatsButton" Click="StatsButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                    <TextBlock Text="Statystyki" Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                    <Image Source="C:\Users\lipsk\source\repos\SoccerLink\Assets\teamstats_icon.png" Width="96" Height="96" />
                </StackPanel>
            </Button>
        </Border>

        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="8" Background="#32404A" CornerRadius="10" BorderBrush="#9ECBFF" BorderThickness="3" Padding="18">
            <Button x:Name="UpcomingEventButton" Click="UpcomingEventButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="14">
                    <TextBlock Text="Nadchodzące wydarzenie: " Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                    <TextBlock Text="Data: " Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                    <TextBlock Text="Miejsce: " Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                    <TextBlock Text="Kliknij, żeby wyświetlić szczegóły..." Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                </StackPanel>
            </Button>
        </Border>

        <Border Grid.Row="2" Grid.Column="2" Margin="8" Background="#32404A" CornerRadius="10" BorderBrush="#9ECBFF" BorderThickness="3" Padding="12">
            <Button x:Name="TeamManagementButton" Click="TeamManagementButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                    <TextBlock Text="Zarządzaj zespołem" Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                    <Image Source="C:\Users\lipsk\source\repos\SoccerLink\Assets\teammanagementimage.png" Width="96" Height="96" />
                </StackPanel>
            </Button>
        </Border>

    </Grid>
</Page>
