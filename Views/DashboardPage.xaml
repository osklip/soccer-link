<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoccerLink.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#405861" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.0*" />
            <ColumnDefinition Width="1.4*" />
            <ColumnDefinition Width="1.0*" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="HeaderText" Grid.Row="0" Grid.ColumnSpan="3" Foreground="#E6F6FF" FontWeight="Bold" FontSize="20" Margin="8,6" HorizontalAlignment="Left" />

        <Border Grid.Row="1" Grid.Column="0" Margin="8" Background="#32404A" CornerRadius="10" BorderBrush="#9ECBFF" BorderThickness="3">
            <Button x:Name="MessageButton" Click="MessageButton_Click" Background="Transparent" 
                BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel Margin="12" VerticalAlignment="Center" Spacing="6">
                    <TextBlock Text="Wiadomości" Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                    <Image Source="/Assets/messages_icon.png" Width="96" Height="96" />
                </StackPanel>
            </Button>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Margin="8" Background="#32404A" CornerRadius="10" BorderBrush="#9ECBFF" BorderThickness="3">
            <Button x:Name="CalendarButton" Click="CalendarButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                    <TextBlock Text="Kalendarz" Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                    <Image Source="/Assets/calendar_icon.png" Width="96" Height="96" />
                </StackPanel>
            </Button>
        </Border>

        <Border Grid.Row="1" Grid.Column="2" Margin="8" Background="#32404A" CornerRadius="10" BorderBrush="#9ECBFF" BorderThickness="3">
            <Button x:Name="StatsButton" Click="StatsButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                    <TextBlock Text="Statystyki" Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                    <Image Source="/Assets/teamstats_icon.png" Width="96" Height="96" />
                </StackPanel>
            </Button>
        </Border>

        <Border Grid.Row="2"
        Grid.Column="0"
        Grid.ColumnSpan="2"
        Margin="8"
        Background="#32404A"
        CornerRadius="10"
        BorderBrush="#9ECBFF"
        BorderThickness="3"
        Padding="18">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="8">

                    <TextBlock Text="Najbliższe wydarzenie"
                           Foreground="#CDE6F8"
                           FontWeight="Bold"
                           FontSize="20"
                           TextAlignment="Center" />

                    <TextBlock x:Name="UpcomingEventTitleTextBlock"
                           Text="Ładowanie..."
                           Foreground="#E6F6FF"
                           FontWeight="Bold"
                           FontSize="18"
                           TextAlignment="Center" />

                    <TextBlock x:Name="UpcomingEventDateTextBlock"
                           Text="Data: ---"
                           Foreground="#CDE6F8"
                           FontWeight="SemiBold"
                           FontSize="16"
                           TextAlignment="Center" />

                    <TextBlock x:Name="UpcomingEventLocationTextBlock"
                           Text="Miejsce: ---"
                           Foreground="#CDE6F8"
                           FontWeight="SemiBold"
                           FontSize="16"
                           TextAlignment="Center" />
                </StackPanel>

                <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="#9ECBFF" Margin="0,0,0,-8" VerticalAlignment="Bottom"/>


                <StackPanel Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="8"
                        Margin="0,8,0,0">

                    <TextBlock Text="Kolejne wydarzenie"
                           Foreground="#CDE6F8"
                           FontWeight="Bold"
                           FontSize="20"
                           TextAlignment="Center" />

                    <TextBlock x:Name="NextEventTitleTextBlock"
                           Text="Ładowanie..."
                           Foreground="#E6F6FF"
                           FontWeight="Bold"
                           FontSize="18"
                           TextAlignment="Center" />

                    <TextBlock x:Name="NextEventDateTextBlock"
                           Text="Data: ---"
                           Foreground="#CDE6F8"
                           FontWeight="SemiBold"
                           FontSize="16"
                           TextAlignment="Center" />

                    <TextBlock x:Name="NextEventLocationTextBlock"
                           Text="Miejsce: ---"
                           Foreground="#CDE6F8"
                           FontWeight="SemiBold"
                           FontSize="16"
                           TextAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.Column="2" Margin="8" Background="#32404A" CornerRadius="10" BorderBrush="#9ECBFF" BorderThickness="3" Padding="12">
            <Button x:Name="TeamManagementButton" Click="TeamManagementButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                    <TextBlock Text="Zarządzaj zespołem" Foreground="#CDE6F8" FontWeight="Bold" FontSize="20" TextAlignment="Center" />
                    <Image Source="/Assets/teammanagementimage.png" Width="96" Height="96" />
                </StackPanel>
            </Button>
        </Border>

    </Grid>
</Page>