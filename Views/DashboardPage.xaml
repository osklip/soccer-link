<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackgroundBrush}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Witaj w SoccerLink" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock x:Name="WelcomeTextBlock" Text="Zalogowany jako: ---" Style="{StaticResource SubHeaderTextStyle}"/>
        </StackPanel>

        <GridView Grid.Row="1" SelectionMode="None" IsItemClickEnabled="True">
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="0,0,20,20"/>
                </Style>
            </GridView.ItemContainerStyle>

            <Button x:Name="CalendarButton" Click="CalendarButton_Click" Style="{StaticResource MenuCardButtonStyle}" Width="200" Height="140">
                <StackPanel Spacing="10">
                    <Image Source="/Assets/calendar_icon.png" Width="48" Height="48"/>
                    <TextBlock Text="Kalendarz" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <Button x:Name="TeamManagementButton" Click="TeamManagementButton_Click" Style="{StaticResource MenuCardButtonStyle}" Width="200" Height="140">
                <StackPanel Spacing="10">
                    <Image Source="/Assets/squad_icon.png" Width="48" Height="48"/>
                    <TextBlock Text="Mój Zespół" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <Button x:Name="StatsButton" Click="StatsButton_Click" Style="{StaticResource MenuCardButtonStyle}" Width="200" Height="140">
                <StackPanel Spacing="10">
                    <Image Source="/Assets/teamstats_icon.png" Width="48" Height="48"/>
                    <TextBlock Text="Statystyki" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <Button x:Name="MessagesButton" Click="MessagesButton_Click" Style="{StaticResource MenuCardButtonStyle}" Width="200" Height="140">
                <StackPanel Spacing="10">
                    <Image Source="/Assets/messages_icon.png" Width="48" Height="48"/>
                    <TextBlock Text="Wiadomości" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <Button x:Name="LogoutButton" Click="LogoutButton_Click" Background="#C0392B" Foreground="White" CornerRadius="12" Width="200" Height="140" Margin="4">
                <StackPanel Spacing="10" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE7E8;" FontFamily="Segoe MDL2 Assets" FontSize="32"/>
                    <TextBlock Text="Wyloguj" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </GridView>
    </Grid>
</Page>