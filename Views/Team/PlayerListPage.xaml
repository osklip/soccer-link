<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.PlayerListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:SoccerLink.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#405861" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <Button Content="⟵ Powrót"
                    Command="{x:Bind ViewModel.NavigateBackCommand}"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="18"
                    Foreground="#CDE6F8"
                    FontWeight="SemiBold"
                    Margin="0,0,0,12" />

            <TextBlock Text="Kadra - Lista Zawodników"
                       Foreground="#E6F6FF"
                       FontWeight="Bold"
                       FontSize="24"
                       HorizontalAlignment="Left" />
        </StackPanel>

        <Border Grid.Row="1"
                Background="#32404A"
                CornerRadius="10"
                BorderBrush="#9ECBFF"
                BorderThickness="3"
                Padding="12">

            <ListView x:Name="PlayersListView"
                      ItemsSource="{x:Bind ViewModel.Players, Mode=OneWay}"
                      Background="Transparent"
                      BorderThickness="0"
                      SelectionMode="None">

                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="12" Background="#2F4450">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Imię i Nazwisko" Foreground="#CDE6F8" FontWeight="Bold" />
                            <TextBlock Grid.Column="1" Text="Nr Koszulki" Foreground="#CDE6F8" FontWeight="Bold" />
                            <TextBlock Grid.Column="2" Text="Pozycja" Foreground="#CDE6F8" FontWeight="Bold" />
                            <TextBlock Grid.Column="3" Text="Telefon" Foreground="#CDE6F8" FontWeight="Bold" />
                            <TextBlock Grid.Column="4" Text="Dyspozycyjność" Foreground="#CDE6F8" FontWeight="Bold" />
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Zawodnik">
                        <Grid Padding="12" Margin="0,4,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Foreground="White">
                                <Run Text="{x:Bind Imie}"/>
                                <Run Text=" "/>
                                <Run Text="{x:Bind Nazwisko}"/>
                            </TextBlock>
                            <TextBlock Grid.Column="1" Text="{x:Bind NumerKoszulki}" Foreground="White" />
                            <TextBlock Grid.Column="2" Text="{x:Bind Pozycja}" Foreground="White" />
                            <TextBlock Grid.Column="3" Text="{x:Bind NumerTelefonu}" Foreground="White" />
                            <TextBlock Grid.Column="4" Text="{x:Bind CzyDyspozycyjny}" Foreground="White" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Page>