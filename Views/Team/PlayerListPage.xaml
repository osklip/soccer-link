<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.PlayerListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:team="using:SoccerLink.ViewModels.Team"
    mc:Ignorable="d">

    <Grid Background="#405861" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="⟵ Powrót" Click="BackButton_Click"
                        Background="Transparent" BorderThickness="0" FontSize="18" Foreground="#CDE6F8" FontWeight="SemiBold" />

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15">
                    <TextBlock Text="Kadra Ogólna" VerticalAlignment="Center" FontWeight="Bold" Foreground="LightGray"/>
                    <ToggleSwitch IsOn="{x:Bind ViewModel.IsMatchMode, Mode=TwoWay}" OffContent="" OnContent=""/>
                    <TextBlock Text="Kadra Meczowa" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FFD700"/>
                </StackPanel>
            </Grid>

            <Border Background="#2A5670" CornerRadius="8" Padding="15" Margin="0,15,0,0" BorderBrush="#FFD700" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Mecz:" VerticalAlignment="Center" Foreground="White"/>
                        <ComboBox ItemsSource="{x:Bind ViewModel.UpcomingMatches, Mode=OneWay}" 
                                  SelectedItem="{x:Bind ViewModel.SelectedMatch, Mode=TwoWay}"
                                  DisplayMemberPath="Przeciwnik" Width="200" PlaceholderText="Wybierz..."/>
                    </StackPanel>
                    <Button Grid.Column="2" Content="Sprawdź dyspozycyjność" Command="{x:Bind ViewModel.SendAvailabilityRequestCommand}" 
                            Background="#FFD700" Foreground="#2F4450" FontWeight="Bold"/>
                </Grid>
            </Border>
        </StackPanel>

        <Border Grid.Row="1" Background="#32404A" CornerRadius="10" BorderBrush="#9ECBFF" BorderThickness="3" Padding="12">
            <ListView x:Name="PlayersListView" 
                      ItemsSource="{x:Bind ViewModel.DisplayPlayers, Mode=OneWay}"
                      Background="Transparent" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="team:PlayerDisplayItem">
                        <Grid Padding="12" Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{x:Bind FullName}" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1" Text="{x:Bind Source.Pozycja}" Foreground="#CDE6F8" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <Border Width="10" Height="10" CornerRadius="5" Background="{x:Bind StatusColor}"/>
                                <TextBlock Text="{x:Bind DyspozycyjnoscText}" Foreground="{x:Bind StatusColor}" FontSize="12"/>
                            </StackPanel>

                            <Button Grid.Column="3" Content="Wymień" 
                                    Visibility="{x:Bind ReplaceVisibility}"
                                    Click="ReplaceButton_Click"
                                    Background="#E74C3C" Foreground="White" FontSize="12"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Page>