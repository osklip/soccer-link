<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SoccerLink.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackgroundBrush}">
        <Border Width="600" CornerRadius="16" Background="{StaticResource CardBackgroundBrush}" 
                BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="28">
            <StackPanel HorizontalAlignment="Stretch" Spacing="18">

                <TextBlock Text="Rejestracja" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center" TextAlignment="Center" />

                <Grid Margin="0,8,0,0" ColumnSpacing="20" RowSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="5">
                        <TextBlock Text="Adres email" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBox Text="{x:Bind ViewModel.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="email@przyklad.com"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Spacing="5">
                        <TextBlock Text="Hasło" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" PlaceholderText="Hasło" />
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Spacing="5">
                        <TextBlock Text="Powtórz Hasło" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" PasswordChanged="ConfirmPasswordBox_PasswordChanged" PlaceholderText="Powtórz Hasło" />
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Spacing="5">
                        <TextBlock Text="Imię" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBox Text="{x:Bind ViewModel.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Imię"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Spacing="5">
                        <TextBlock Text="Nazwisko" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBox Text="{x:Bind ViewModel.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Nazwisko"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Spacing="5">
                        <TextBlock Text="Numer telefonu" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBox Text="{x:Bind ViewModel.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="123 456 789"/>
                    </StackPanel>
                </Grid>

                <StackPanel HorizontalAlignment="Center" Margin="0,24,0,0">
                    <Button Command="{x:Bind ViewModel.RegisterCommand}" Content="Zarejestruj się"
                            HorizontalAlignment="Stretch" Width="200" Background="{StaticResource TextAccentBrush}" Foreground="Black" FontWeight="Bold"/>

                    <Button Command="{x:Bind ViewModel.GoToLoginCommand}" Content="Masz już konto? Zaloguj się"
                            Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" HorizontalAlignment="Center" Margin="0,10,0,0"/>

                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" Foreground="{x:Bind ViewModel.StatusColor, Mode=OneWay}"
                               FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0" TextAlignment="Center" TextWrapping="Wrap" />
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>